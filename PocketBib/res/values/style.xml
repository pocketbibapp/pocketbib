<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.PocketBib" parent="Theme.Sherlock.Light"></style>

    <style name="Divider">
        <item name="android:layout_height">2dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:layout_marginTop">@dimen/margin_small</item>
        <item name="android:layout_marginBottom">@dimen/margin_small</item>
    </style>
    
    <style name="Divider.Thin" parent="Divider">
        <item name="android:layout_height">1dp</item>
         <item name="android:layout_marginTop">4dp</item>
    </style>

    <style name="TextSearchLarge">
        <item name="android:textAppearance">?android:attr/textAppearanceMedium</item>
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
    </style>

    <style name="TextSearchSmall">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:layout_marginLeft">@dimen/margin_small</item>
    </style>

    <style name="DefaultText" parent="@android:style/TextAppearance" />

</resources>